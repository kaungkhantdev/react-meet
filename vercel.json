{
    "version": 2,
    "builds": [
        {
            "src": "backend/app/index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["backend/app/**", "frontend/dist/**"] }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/app/index.js"
        }
    ]
}
